
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}


<style>
    .dataTable > thead > tr > th[class*="sort"]:before,
    .dataTable > thead > tr > th[class*="sort"]:after {
        content: "" !important;
    }

    .downloadtemp {
        font-weight: 600;
    }

    textarea#TxtRemark {
        height: 35px;
    }

    a#linkdownload {
        cursor: pointer;
    }

    .caret {
        display: none;
    }

    span.multiselect-selected-text {
        display: flex;
        margin-left: 4px;
    }

    span .multiselect-selected-text {
        margin-right: 10rem;
    }

    .btnsave {
        display: inline !important;
    }


    .btn-default:hover, .btn-default:active {
        background-color: transparent;
    }

    .btn-default:hover {
        border-color: none;
    }

    .btn-default {
        background-color: white;
        color: #444;
        border-color: #ddd;
    }

    button.multiselect.dropdown-toggle.btn.btn-default {
        width: 50rem;
        max-width: 100%;
        border-radius: 0px;
    }

    .btn-group, .btn-group-vertical {
        max-width: 100%;
    }

    .bortext {
        border: 1px solid red;
    }

    .form-group-chk {
        margin-bottom: 0px;
        display: inline-table;
        width: 100%;
        padding: 0px;
    }

    .control-label-o {
        margin-top: 0px;
        display: contents;
    }

    .input-group .form-control, .input-group-addon, .input-group-btn {
        display: table-cell;
    }

    .form-control-t {
        display: block;
        width: 8rem;
        padding: 5px;
    }

    input.form-control-t {
        text-align: center;
    }

    span.input-group-addon {
        padding: 6px 12px;
        font-size: 14px;
        font-weight: 400;
        line-height: 1;
        color: #555;
        text-align: center;
        background-color: #eee;
        border: 1px solid #ccc;
        border-radius: 4px;
        border-color: #d2d6de;
        background-color: #fff;
    }

    .radiogrp {
        display: flex;
        margin-top: 5px;
    }

    .TDSCls {
        margin-left: 15px;
        display: inline-block;
    }

    .col-md-4.boxtds {
        margin-top: -5px;
    }

    .labelvalue {
        margin-bottom: 4px;
    }

    .input-group {
        position: relative;
        display: table;
        border-collapse: separate;
    }

    a#btnAddLead {
        padding: 6px 20px;
    }

    #TxtFilterDate {
        height: 33px;
        margin-top: 7px;
        width: 195px;
        margin-right: 5px;
    }

    .RemarkDatahead {
        font-family: 'Rubik', sans-serif;
        font-weight: 400;
        padding-left: 13px;
        padding-top: 5px;
    }

    .RemarkDatadate {
        font-family: 'Rubik', sans-serif;
        font-weight: 400;
        color: #808080;
        padding-left: 13px;
    }

    .RemarkDataDes {
        margin-top: 8px;
        font-family: 'Rubik', sans-serif;
        text-align: left;
        color: #333333;
        font-size: 14px;
        width: 90%;
        margin-left: 13px;
        margin-bottom: 8px;
    }

    .RemarkData {
        border: 1px solid #e4e4e4;
        border-radius: 16px;
        box-shadow: 0px 4px 8px #e4e4e4;
    }

    .d-flex p {
        margin-bottom: 5px;
    }

    .RemarkData_Block {
        margin-top: 10px;
        border: 1px solid #e4e4e4;
        border-radius: 16px;
        box-shadow: 0px 4px 8px #e4e4e4;
    }

    .modal-dialog-scrollable {
        max-height: calc(100% - 3.5rem);
    }

    .box-header {
        padding: 0px;
    }

    .tab-header {
        display: flex;
    }

    .tab {
        width: 224px;
        text-align: center;
        cursor: pointer;
        padding: 10px;
        border-bottom: 2px solid transparent;
    }

        .tab:hover {
            background-color: #ddd;
        }

        .tab.active {
            background-color: #3c8dbc;
            color: black;
        }

    .tab-content {
        padding: 20px;
    }

    .padding-left {
        padding-left: 0px;
    }

    #TxtCategory {
        width: 80%
    }

    #TxtTypeOfLeadName {
        width: 80%
    }

    .overflow {
        height: 60%;
        overflow-y: scroll;
    }

    .tableWrap {
        height: 200px;
        border: 2px solid black;
        overflow: auto;
    }

    thead tr th {
        position: sticky;
        top: 0;
    }

    table {
        border-collapse: collapse;
    }

    th {
        font-family: 'Source Sans Pro','Helvetica Neue',Helvetica,Arial,sans-serif;
        color: white;
        padding: 16px;
        padding-left: 15px;
        border-left: 0px #5ba7d7;
        border-bottom: 1px solid #e8e8e8;
        background: #5ba7d7;
        text-align: left;
        font-weight: 400;
    }

    .tableFixHead {
        overflow: auto;
        height: 100%;
    }

        .tableFixHead thead th {
            position: sticky;
            top: 0;
        }

    table {
        width: 100%;
    }

        table td {
            padding: 16px;
        }

    tbody tr {
        border-bottom: 2px solid #e8e8e8;
    }

    thead {
        color: rgba(0, 0, 0, 0.85);
    }

    tbody tr:hover {
        background: #e6f7ff;
    }

    .padding-title {
        padding-bottom: 7px;
    }
</style>
<section class="content-header padding-title">
    <h1 id="boxTitle">Sub Category Details</h1>
</section>
<div class="row">
    <div class="col-md-12">
        <div class="box box-primary with-border" id="TypeOfLeadDataDIV">
            <div class="box-header with-border">
                <div class="tab-header">
                    <div class="tab" onclick="@("window.location.href='" + @Url.Action("Index", "Category") + "'");">Add Category</div>
                    <div class="tab active" onclick="@("window.location.href='" + @Url.Action("Index", "TypeOfLead") + "'");">Add Sub Category</div>
                </div>
            </div>
            <div class="box-body">
                <div class="col-md-12 padding-left" id="TypeOfLeadForm">
                    <div class="col-md-4 padding-left">
                        <div class="form-group">
                            <div class="box-body padding-left">
                                <div class="form-group" id="CategoryNameDIV">
                                    <label>Category Name<span class="text-danger">*</span></label>
                                    <select id="TxtCategory" class="form-control">
                                        <option selected="" value="">--Select Category--</option>
                                        @Html.Raw(ViewBag.CategoryModelList)
                                    </select>
                                    <span class="help-block" id="ErrorForCategoryName"></span>
                                </div>
                                <div class="form-group" id="TypeOfLeadNameDIV">
                                    <label>Sub Category Name<span class="text-danger">*</span></label>
                                    <input type="text" maxlength="25" class="form-control" id="TxtTypeOfLeadName" placeholder="Enter Sub Category Name" autocomplete="off" />
                                    <span class="help-block" id="ErrorForTypeOfLeadName"></span>
                                </div>
                            </div>
                            <div class="box-footer padding-left">
                                <button type="button" class="btn btn-success" id="btnSave" onclick="SaveFormData();" style="margin-right: 10px;width:110px;">Save</button>
                                <button type="button" class="btn btn-danger" id="btnreset" onclick="ResetFormData();" style="width:110px;">Reset</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8" id="TypeOfLeadTable">
                        <div class="box box-primary with-border">
                            <div class="box-body">
                                <div id="TypeOfLeadDetails"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section LocalJs{
    <script>
        $(document).ready(function () {
            debugger;
            refreshDataTable(0)
        });
        function refreshDataTable(pageId) {
            debugger;
            $("#TypeOfLeadDetails").load("@Url.Action("TypeOfLeadTablePartial", "TypeOfLead")", function () {
                var pageToSet = pageId;
                var myDataTable = $('#TableTypeOfLead').DataTable({
                });
                $("#TableTypeOfLead").removeClass('dataTable');
                $(".col-sm-12").addClass('overflow');
                $(".col-sm-12").css('padding-right', '0px');
                if (pageId != 0) {
                    sessionStorage.setItem('pageId', 0);
                }
                myDataTable.page(pageToSet).draw(false);
            });
        }
    </script>
    <script src="~/MyJavascripts/TypeOfLead.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.13.5/xlsx.full.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.13.5/jszip.js"></script>
    <script src="https://unpkg.com/bootstrap-multiselect@0.9.13/dist/js/bootstrap-multiselect.js"></script>
    <script src="//cdn.rawgit.com/rainabba/jquery-table2excel/1.1.0/dist/jquery.table2excel.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script>
}

@model LeadManagementSystem.MODEL.SubCategoryModel

@if (Model.SubCategoryList.Count > 0 || Model.SubCategoryList != null)
{

    <table class="table" id="TableSubCategory">
        <thead>
            <tr>
                <th class="text-center">Sr.No</th>
                <th class="text-center">Category Name</th>
                <th class="text-center">Sub Category Name</th>
                <th class="text-center" id="colAction">Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @for (int i = 0; i < Model.SubCategoryList.Count; i++)
            {
                <tr>
                    <td>@Model.SubCategoryList[i].RowNum</td>
                    <td>@Model.SubCategoryList[i].Category_Name</td>
                    <td>@Model.SubCategoryList[i].SubCategory</td>

                    <td style="padding: 3px;">
                        <div class="btn-group">

                            <a data-toggle="tooltip" title="Update" data-placement="left" class="btn btn-sm waves-effect" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;"><i class="fa fa-edit" onclick="EditSubCategory(@Model.SubCategoryList[i].SubCategory_ID);"></i></a>
                            @if (Session["Admin_ID"].ToString() == "1" || Session["Admin_ID"].ToString() == @Model.SubCategoryList[i].CreatedBy)
                            {<a data-toggle="tooltip" title="delete" data-placement="left" class="btn btn-sm waves-effect" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;"><i class="fa fa-trash" onclick="RemoveSubCategory(@Model.SubCategoryList[i].SubCategory_ID);"></i></a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table" id="TableSubCategory">
        <thead>
            <tr>
                <th class="text-center">Sr.No</th>
                <th class="text-center">Category Name</th>
                <th class="text-center">Sub Category Name</th>
                <th class="text-center" id="colAction">Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            <tr>
                <td class="text-center">No data Found</td>
            </tr>
        </tbody>
    </table>
}


@model LeadManagementSystem.MODEL.TypeOfLeadModel

@if (Model.TypeOfLeadList.Count > 0 || Model.TypeOfLeadList != null)
{

    <table class="table" id="TableTypeOfLead">
        <thead>
            <tr>
                <th class="text-center">Sr.No</th>
                <th class="text-center">Category Name</th>
                <th class="text-center">Type Of Lead Name</th>
                <th class="text-center" id="colAction">Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @for (int i = 0; i < Model.TypeOfLeadList.Count; i++)
            {
                <tr>
                    <td>@Model.TypeOfLeadList[i].RowNum</td>
                    <td>@Model.TypeOfLeadList[i].Category_Name</td>
                    <td>@Model.TypeOfLeadList[i].TypeOfLead</td>

                    <td style="padding: 3px;">
                        <div class="btn-group">

                            <a data-toggle="tooltip" title="Update" data-placement="left" class="btn btn-sm waves-effect" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;"><i class="fa fa-edit" onclick="EditTypeOfLead(@Model.TypeOfLeadList[i].TypeOfLead_ID);"></i></a>
                            <a data-toggle="tooltip" title="delete" data-placement="left" class="btn btn-sm waves-effect" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;"><i class="fa fa-trash" onclick="RemoveTypeOfLead(@Model.TypeOfLeadList[i].TypeOfLead_ID);"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table" id="TableTypeOfLead">
        <thead>
            <tr>
                <th class="text-center">Sr.No</th>
                <th class="text-center">Category Name</th>
                <th class="text-center">Type Of Lead Name</th>
                <th class="text-center" id="colAction">Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            <tr>
                <td class="text-center">No data Found</td>
            </tr>
        </tbody>
    </table>
}


@model LeadManagementSystem.MODEL.LeadCategoryModel

@if (Model.LeadCategoryList.Count < 0 || Model.LeadCategoryList != null)
{

    <table class="table" id="TableCategory">
        <thead>
            <tr>
                <th class="text-center">Sr.No</th>
                <th class="text-center">Project Type Name</th>
                <th class="text-center" id="colAction">Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @for (int i = 0; i < Model.LeadCategoryList.Count; i++)
            {
                <tr>
                    <td>@Model.LeadCategoryList[i].RowNum</td>
                    <td>@Model.LeadCategoryList[i].Category_Name</td>

                    <td style="padding: 3px;">
                        <div class="btn-group">
                            
                            <a data-toggle="tooltip" title="Update" data-placement="left" class="btn btn-sm waves-effect" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;"><i class="fa fa-edit" onclick="EditCategory(@Model.LeadCategoryList[i].Category_Id);"></i></a>
                            <a data-toggle="tooltip" title="delete" data-placement="left" class="btn btn-sm waves-effect" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;"><i class="fa fa-trash" onclick="RemoveCategory(@Model.LeadCategoryList[i].Category_Id);"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table" id="TableCategory">
        <thead>
            <tr>
                <th class="text-center">Sr.No</th>
                <th class="text-center">Category Name</th>
                <th class="text-center" id="colAction">Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            <tr>
                <td class="text-center">No data Found</td>
            </tr>
        </tbody>
    </table>
}


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<style>
    .dataTable > thead > tr > th[class*="sort"]:before,
    .dataTable > thead > tr > th[class*="sort"]:after {
        content: "" !important;
    }

    .downloadtemp {
        font-weight: 600;
    }

    textarea#TxtRemark {
        height: 35px;
    }

    a#linkdownload {
        cursor: pointer;
    }

    .caret {
        display: none;
    }

    span.multiselect-selected-text {
        display: flex;
        margin-left: 4px;
    }

    span .multiselect-selected-text {
        margin-right: 10rem;
    }

    .btnsave {
        display: inline !important;
    }


    .btn-default:hover, .btn-default:active {
        background-color: transparent;
    }

    .btn-default:hover {
        border-color: none;
    }

    .btn-default {
        background-color: white;
        color: #444;
        border-color: #ddd;
    }

    button.multiselect.dropdown-toggle.btn.btn-default {
        width: 50rem;
        max-width: 100%;
        border-radius: 0px;
    }

    .btn-group, .btn-group-vertical {
        max-width: 100%;
    }

    .bortext {
        border: 1px solid red;
    }

    .form-group-chk {
        margin-bottom: 0px;
        display: inline-table;
        width: 100%;
        padding: 0px;
    }

    .control-label-o {
        margin-top: 0px;
        display: contents;
    }

    .input-group .form-control, .input-group-addon, .input-group-btn {
        display: table-cell;
    }

    .form-control-t {
        display: block;
        width: 8rem;
        padding: 5px;
    }

    input.form-control-t {
        text-align: center;
    }

    span.input-group-addon {
        padding: 6px 12px;
        font-size: 14px;
        font-weight: 400;
        line-height: 1;
        color: #555;
        text-align: center;
        background-color: #eee;
        border: 1px solid #ccc;
        border-radius: 4px;
        border-color: #d2d6de;
        background-color: #fff;
    }

    .radiogrp {
        display: flex;
        margin-top: 5px;
    }

    .TDSCls {
        margin-left: 15px;
        display: inline-block;
    }

    .col-md-4.boxtds {
        margin-top: -5px;
    }

    .labelvalue {
        margin-bottom: 4px;
    }

    .input-group {
        position: relative;
        display: table;
        border-collapse: separate;
    }

    #TxtLeadSourceName {
        width: 80%;
    }

    .padding-left {
        padding-left: 0px;
    }

    .overflow {
        height: 60%;
        overflow-y: scroll;
    }

    .tableWrap {
        height: 200px;
        border: 2px solid black;
        overflow: auto;
    }

    thead tr th {
        position: sticky;
        top: 0;
    }

    table {
        border-collapse: collapse;
    }

    th {
        font-family: 'Source Sans Pro','Helvetica Neue',Helvetica,Arial,sans-serif;
        color: white;
        padding: 16px;
        padding-left: 15px;
        border-left: 0px #5ba7d7;
        border-bottom: 1px solid #e8e8e8;
        background: #5ba7d7;
        text-align: left;
        font-weight: 400;
    }

    .tableFixHead {
        overflow: auto;
        height: 100%;
    }

        .tableFixHead thead th {
            position: sticky;
            top: 0;
        }

    table {
        width: 100%;
    }

        table td {
            padding: 16px;
        }

    tbody tr {
        border-bottom: 2px solid #e8e8e8;
    }

    thead {
        color: rgba(0, 0, 0, 0.85);
    }

    tbody tr:hover {
        background: #e6f7ff;
    }

    .padding-title {
        padding-bottom: 7px;
    }
</style>
<section class="content-header padding-title">
    <h1>Owner Details</h1>
</section>

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary with-border" id="LeadSourceDataDIV">
            <div class="box-header with-border">
                <h3 class="box-title" id="boxTitle">Add Owner Details</h3>
            </div>
            <div class="box-body">
                <div class="col-md-12 padding-left" id="LeadSourceForm">
                    <div class="col-md-4 padding-left">
                        <div class="form-group">
                            <div class="box-body padding-left">
                                <div class="form-group" id="LeadSourceNameDIV">
                                    <label>Owner Name<span class="text-danger">*</span></label>
                                    <input type="text" maxlength="25" class="form-control" id="TxtLeadSourceName" placeholder="Enter Owner Name" autocomplete="off">
                                    <span class="help-block" id="ErrorForLeadSource"></span>
                                </div>
                            </div>
                            <div class="box-footer padding-left">
                                <button type="button" class="btn btn-success" id="btnSave" onclick="SaveFormData();" style="margin-right: 10px;width:110px;">Save</button>
                                <button type="button" class="btn btn-danger" id="btnreset" onclick="ResetFormData();" style="width:110px;">Reset</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8" id="LeadSourceTable">
                        <div class="box box-primary with-border">
                            <div class="box-body">
                                <div id="LeadSourceDetails"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section LocalJs{
    <script>
        function refreshDataTable(pageId) {
            debugger;
            $("#LeadSourceDetails").load("@Url.Action("LeadSourceTablePartial", "Source")", function () {
                var pageToSet = pageId;
                var myDataTable = $('#TableLeadSource').DataTable({
                });
                $("#TableLeadSource").removeClass('dataTable');
                $(".col-sm-12").addClass('overflow');
                $(".col-sm-12").css('padding-right', '0px');
                if (pageId != 0) {
                    sessionStorage.setItem('pageId', 0);
                }
                myDataTable.page(pageToSet).draw(false);
            });
        }
        $(document).ready(function () {
            debugger;
            refreshDataTable(0)
        });
    </script>
    <script src="~/MyJavascripts/LeadOwnerDetails.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.13.5/xlsx.full.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.13.5/jszip.js"></script>
    <script src="https://unpkg.com/bootstrap-multiselect@0.9.13/dist/js/bootstrap-multiselect.js"></script>
    <script src="//cdn.rawgit.com/rainabba/jquery-table2excel/1.1.0/dist/jquery.table2excel.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script>
}
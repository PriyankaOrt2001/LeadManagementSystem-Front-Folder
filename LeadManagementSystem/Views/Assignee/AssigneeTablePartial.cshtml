
@model LeadManagementSystem.MODEL.AssigneeModel

@if (Model.AssigneeList.Count < 0 || Model.AssigneeList != null)
{
    <table class="table" id="TableAssignee">
        <thead>
            <tr>
                <th class="text-center">Sr.No</th>
                <th class="text-center">Assignee Name</th>
                <th class="text-center" id="colAction">Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @for (int i = 0; i < Model.AssigneeList.Count; i++)
            {
                <tr>
                    <td>@Model.AssigneeList[i].RowNum</td>
                    <td>@Model.AssigneeList[i].Assignee_Name</td>
                    <td style="padding: 3px;">
                        <div class="btn-group">
                            <a data-toggle="tooltip" title="Update" data-placement="left" class="btn btn-sm waves-effect" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;"><i class="fa fa-edit" onclick="EditAssigneeDetails(@Model.AssigneeList[i].Assignee_Id);"></i></a>
                            @if (Session["Admin_ID"].ToString() == "1" || Session["Admin_ID"].ToString() == @Model.AssigneeList[i].CreatedBy)
                            {<a data-toggle="tooltip" title="delete" data-placement="left" class="btn btn-sm waves-effect" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;"><i class="fa fa-trash" onclick="RemoveAssignee(@Model.AssigneeList[i].Assignee_Id);"></i></a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table" id="TableAssignee">
        <thead>
            <tr>
                <th class="text-center">Sr.No</th>
                <th class="text-center">Assignee Name</th>
                <th class="text-center" id="colAction">Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            <tr>
                <td class="text-center">No data Found</td>
            </tr>
        </tbody>
    </table>
}

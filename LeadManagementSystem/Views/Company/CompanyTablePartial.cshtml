
@model LeadManagementSystem.MODEL.CompanyModel

@if (Model.CompanyList.Count < 0 || Model.CompanyList != null)
{
    <table class="table" id="TableCompany">
        <thead>
            <tr>
                <th class="text-center">Sr.No</th>
                <th class="text-center">Comapny Name</th>
                <th class="text-center" id="colAction">Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @for (int i = 0; i < Model.CompanyList.Count; i++)
            {
                <tr>
                    <td>@Model.CompanyList[i].RowNum</td>
                    <td>@Model.CompanyList[i].Company_Name</td>

                    <td style="padding: 3px;">
                        <div class="btn-group">

                            <a data-toggle="tooltip" title="Update" data-placement="left" class="btn btn-sm waves-effect" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;"><i class="fa fa-edit" onclick="EditCompany(@Model.CompanyList[i].Company_Id);"></i></a>
                            @if (Session["Admin_ID"].ToString() == "1" || Session["Admin_ID"].ToString() == @Model.CompanyList[i].CreatedBy){
                                <a data-toggle="tooltip" title="delete" data-placement="left" class="btn btn-sm waves-effect" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;"><i class="fa fa-trash" onclick="RemoveCompany(@Model.CompanyList[i].Company_Id);"></i></a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table" id="TableCompany">
        <thead>
            <tr>
                <th class="text-center">Sr.No</th>
                <th class="text-center">Category Name</th>
                <th class="text-center" id="colAction">Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            <tr>
                <td class="text-center">No data Found</td>
            </tr>
        </tbody>
    </table>
}


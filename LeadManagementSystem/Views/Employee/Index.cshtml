
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<style>
    .dataTable > thead > tr > th[class*="sort"]:before,
    .dataTable > thead > tr > th[class*="sort"]:after {
        content: "" !important;
    }

    .downloadtemp {
        font-weight: 600;
    }

    textarea#TxtRemark {
        height: 35px;
    }

    a#linkdownload {
        cursor: pointer;
    }

    .caret {
        display: none;
    }

    span.multiselect-selected-text {
        display: flex;
        margin-left: 4px;
    }

    span .multiselect-selected-text {
        margin-right: 10rem;
    }

    .btnsave {
        display: inline !important;
    }


    .btn-default:hover, .btn-default:active {
        background-color: transparent;
    }

    .btn-default:hover {
        border-color: none;
    }

    .btn-default {
        background-color: white;
        color: #444;
        border-color: #ddd;
    }

    button.multiselect.dropdown-toggle.btn.btn-default {
        width: 50rem;
        max-width: 100%;
        border-radius: 0px;
    }

    .btn-group, .btn-group-vertical {
        max-width: 100%;
    }

    .bortext {
        border: 1px solid red;
    }

    .form-group-chk {
        margin-bottom: 0px;
        display: inline-table;
        width: 100%;
        padding: 0px;
    }

    .control-label-o {
        margin-top: 0px;
        display: contents;
    }

    .input-group .form-control, .input-group-addon, .input-group-btn {
        display: table-cell;
    }

    .form-control-t {
        display: block;
        width: 8rem;
        padding: 5px;
    }

    input.form-control-t {
        text-align: center;
    }

    span.input-group-addon {
        padding: 6px 12px;
        font-size: 14px;
        font-weight: 400;
        line-height: 1;
        color: #555;
        text-align: center;
        background-color: #eee;
        border: 1px solid #ccc;
        border-radius: 4px;
        border-color: #d2d6de;
        background-color: #fff;
    }

    .radiogrp {
        display: flex;
        margin-top: 5px;
    }

    .TDSCls {
        margin-left: 15px;
        display: inline-block;
    }

    .col-md-4.boxtds {
        margin-top: -5px;
    }

    .labelvalue {
        margin-bottom: 4px;
    }

    .input-group {
        position: relative;
        display: table;
        border-collapse: separate;
    }

</style>
<section class="content-header">
    <h1>Employee Details</h1>
    @*<ol class="breadcrumb" id="toLeadDetails">
            <li class="active"><a href="@Url.Action("Index","LeadManagement")" onclick="Leadtable();">Lead Details</a></li>
            <li id="currentPage">Edit Lead</li>

        </ol>*@
</section>

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary with-border" id="EmployeeDataDIV">
            <div class="box-header with-border">
                <h3 class="box-title" id="boxTitle">Add Employee Details</h3>

            </div>
            <div class="box-body">
                <div class="col-md-12" id="EmployeeForm">
                    <div class="form-group">

                        <div class="box-body">

                            <div class="row" style="padding-left: 100px;">
                                <div class="col-md-12">
                                    <div class="col-md-4">
                                        <div class="form-group" id="EmployeeNameDIV">
                                            <label>Employee Name<span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="TxtEmployeeName" placeholder="Enter Employee Name" autocomplete="off" />
                                            <span class="help-block" id="ErrorForEmployeeName"></span>
                                        </div>
                                    </div>


                                </div>
                            </div>

                            <div class="box-footer" style="padding-left: 170px;">
                                <button type="button" class="btn btn-success" id="btnSave" onclick="SaveFormData();" style="margin-right: 10px;width:110px;">Save</button>
                                <button type="button" class="btn btn-danger" id="btnreset" onclick="ResetFormData();" style="width:110px;">Reset</button>
                            </div>
                        </div>

                    </div>

                </div>

                <div class="col-md-12" id="EmployeeTable" style="width: 800px;margin-left: 0px;">
                    <div class="box box-primary with-border">

                        <div class="box-body">
                            <div id="EmployeeDetails"></div>

                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


@section LocalJs{

    <script>


        $(document).ready(function () {
            debugger;
            refreshDataTable()
        });
        function refreshDataTable() {
            debugger;
            $("#EmployeeDetails").load("@Url.Action("EmployeeTablePartial", "Employee")", function () {
                $("#TableEmployee").DataTable();

            });
        }
    </script>
    <script src="~/MyJavascripts/Employee.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.13.5/xlsx.full.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.13.5/jszip.js"></script>
    <script src="https://unpkg.com/bootstrap-multiselect@0.9.13/dist/js/bootstrap-multiselect.js"></script>

    <script src="//cdn.rawgit.com/rainabba/jquery-table2excel/1.1.0/dist/jquery.table2excel.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/js/bootstrap-datepicker.min.js"></script>

}





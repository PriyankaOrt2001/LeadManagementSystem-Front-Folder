@model LeadManagementSystem.MODEL.LeadModel

@if (Model.LeadList.Count > 0 || Model.LeadList != null)
{

    <table class="table" id="TableLead" style="font-size: 15px;width: 95%;">
        <thead>
            <tr>
                <th class="text-center" style="width: 2%;"></th>
                <th class="text-center" style="width: 2%;">Sr.No</th>
                <th class="text-center" style="width: 10%;">Lead Date</th>
                <th class="text-center" style="width: 14%;">Company Name</th>
                <th class="text-center" style="width: 11%;">Client Name</th>
                <th class="text-center" style="width: 10%;">Priority</th>
                <th class="text-center" style="width: 8%;">Source</th>
                <th class="text-center" style="width: 10%;">Assigned To</th>
                <th class="text-center" style="width: 12%;">Product Name</th>
                <th class="text-center" style="width: 15%;">Status</th>
                <th class="text-center" id="colAction" style="width: 12%;">Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @for (int i = 0; i < Model.LeadList.Count; i++)
            {
                <tr>
                    <td style="padding: 3px;">
                        <div class="btn-group">
                            @if (Model.LeadList[i].IsFav == 1)
                            {
                                <a data-toggle="tooltip" title="View Details" data-placement="left" class="btn btn-sm waves-effect" onclick="IsFavLead('@Model.LeadList[i].LeadId',0)" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;"><i class="fa fa-star"></i></a>
                            }
                            else
                            {
                                <a data-toggle="tooltip" title="View Details" data-placement="left" class="btn btn-sm waves-effect" onclick="IsFavLead('@Model.LeadList[i].LeadId',1)" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;"><i class="fa fa-star-o"></i></a>
                            }
                        </div>
                    </td>
                    <td>@Model.LeadList[i].RowNum</td>
                    <td>@Model.LeadList[i].CreatedDate</td>
                    <td>@Model.LeadList[i].Short_Company_Name</td>
                    <td>@Model.LeadList[i].ClientName</td>
                    <td>@Model.LeadList[i].Category</td>
                    <td>@Model.LeadList[i].Source</td>
                    <td>@Model.LeadList[i].AssignTo</td>
                    <td>@Model.LeadList[i].ProductName</td>

                    <td style="width: 210px;">
                        @if (Model.LeadList[i].StatusType == "Open")
                        {
                            <select id="DrpStatusType" style="width: 80%;" class="form-control" onchange="changeLeadStatus('@Model.LeadList[i].LeadId',this.value)">
                                <option selected="" value="Open">Open</option>
                                <option value="Closed">Closed</option>
                                <option value="Converted">Converted</option>
                                <option value="Hold">Hold</option>
                                <option value="Ghost">Ghost</option>
                            </select>
                        }
                        else if (Model.LeadList[i].StatusType == "Closed")
                        {
                            <select id="DrpStatusType" style="width: 80%;" class="form-control" onchange="changeLeadStatus('@Model.LeadList[i].LeadId',this.value)">
                                <option value="Open">Open</option>
                                <option selected="" value="Closed">Closed</option>
                                <option value="Converted">Converted</option>
                                <option value="Hold">Hold</option>
                                <option value="Ghost">Ghost</option>


                            </select>
                        }
                        else if (Model.LeadList[i].StatusType == "Converted")
                        {
                            <select id="DrpStatusType" style="width: 80%;" class="form-control" onchange="changeLeadStatus('@Model.LeadList[i].LeadId',this.value)">
                                <option value="Open">Open</option>
                                <option value="Closed">Closed</option>
                                <option selected="" value="Converted">Converted</option>
                                <option value="Hold">Hold</option>
                                <option value="Ghost">Ghost</option>
                            </select>
                        }
                        else if (Model.LeadList[i].StatusType == "Hold")
                        {
                            <select id="DrpStatusType" style="width: 80%;" class="form-control" onchange="changeLeadStatus('@Model.LeadList[i].LeadId',this.value)">
                                <option value="Open">Open</option>
                                <option value="Closed">Closed</option>
                                <option value="Converted">Converted</option>
                                <option selected="" value="Hold">Hold</option>
                                <option value="Ghost">Ghost</option>
                            </select>
                        }
                        else if (Model.LeadList[i].StatusType == "Ghost")
                        {
                            <select id="DrpStatusType" style="width: 80%;" class="form-control" onchange="changeLeadStatus('@Model.LeadList[i].LeadId',this.value)">
                                <option value="Open">Open</option>
                                <option value="Closed">Closed</option>
                                <option value="Converted">Converted</option>
                                <option value="Hold">Hold</option>
                                <option selected="" value="Ghost">Ghost</option>
                            </select>
                        }
                        else
                        {
                            <select id="DrpStatusType" style="width: 80%;" class="form-control" onchange="changeLeadStatus('@Model.LeadList[i].LeadId',this.value)">
                                <option selected="" value="">--Select Status--</option>
                                <option value="Open">Open</option>
                                <option value="Closed">Closed</option>
                                <option value="Converted">Converted</option>
                                <option value="Hold">Hold</option>
                                <option value="Ghost">Ghost</option>
                            </select>
                        }

                    </td>

                    <td style="padding: 3px;">
                        <div class="btn-group" style="width: 130px;">
                            <a data-toggle="tooltip" title="View Details" onclick="ViewDetails('@Model.LeadList[i].LeadId');" data-placement="left" class="btn btn-sm waves-effect" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;">
                                <i class="fa fa-eye"></i>
                            </a>

                            <a data-toggle="tooltip" title="Update" data-placement="left" class="btn btn-sm waves-effect" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;">
                                <i class="fa fa-edit" onclick="View('@Model.LeadList[i].LeadId');"></i>
                            </a>
                            @*@if (Model.LeadList[i].StatusType == "Closed")
                            {
                                <a data-placement="left" data-toggle="tooltip" class="btn btn-sm waves-effect" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;"><i class='fa fa-bell' style='color: #000000'></i></a>
                            }
                            @if (Model.LeadList[i].ScheduleDate == null && Model.LeadList[i].StatusType != "Closed")
                            {
                                <a data-placement="left" data-toggle="tooltip" class="btn btn-sm waves-effect" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;"><i class='fa fa-bell-slash-o' style='color: #FF5733'></i></a>
                            }
                            @if (Model.LeadList[i].ScheduleDate != null && Model.LeadList[i].StatusType != "Closed")
                            {
                                <a data-placement="left" data-toggle="tooltip" class="btn btn-sm waves-effect" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;"><i class='fa fa-bell' style='color: #f3da35'></i></a>
                            }*@
                            <a data-toggle="tooltip" title="Delete" data-placement="left" class="btn btn-sm waves-effect" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;">
                                <i class="fa fa-trash" onclick="deleteLead('@Model.LeadList[i].LeadId');"></i>
                            </a>
                            
                            <a data-placement="left" title="Remark" data-toggle="tooltip" class="btn btn-sm waves-effect" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;" onclick="remark('@Model.LeadList[i].LeadId')">
                                <i class='fa fa-commenting-o' style='color: #000000'></i>
                            </a>
                            <a data-placement="left" data-toggle="tooltip" class="btn btn-sm waves-effect" style="font-size: 16px;padding-left: 3px;padding-right: 3px;width: 22px;height: 35px;padding-top: 0px;">
                                @Model.LeadList[i].remarkCount
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table" id="TableLead" style="font-size: 15px;width: 95%;">
        <thead>
            <tr>
                <th class="text-center"></th>
                <th class="text-center">Sr.No</th>
                <th class="text-center">Lead Date</th>
                <th class="text-center">Company Name</th>
                <th class="text-center">Client Name</th>
                <th class="text-center">Lead Category</th>
                <th class="text-center">Source</th>
                <th class="text-center">Assigned To</th>
                <th class="text-center">Project Name</th>
                <th class="text-center">Status</th>
                <th class="text-center" id="colAction">Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            <tr>
                <td class="text-center">No data Found</td>
            </tr>
        </tbody>
    </table>
}

@model LeadManagementSystem.MODEL.PlanDetailsModel

@if (Model.PlanList.Count < 0 || Model.PlanList != null)
{

    <table class="table" id="TableCategory">
        <thead>
            <tr>
                <th class="text-center">Sr.No</th>
                <th class="text-center">Plan Name</th>
                <th class="text-center">Plan Price</th>
                <th class="text-center" id="colAction">Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @for (int i = 0; i < Model.PlanList.Count; i++)
            {
            <tr>
                <td>@Model.PlanList[i].RowNum</td>
                <td>@Model.PlanList[i].Plan_Name</td>
                <td>@Model.PlanList[i].Plan_Price</td>

                <td style="padding: 3px;">
                    <div class="btn-group">

                        <a data-toggle="tooltip" title="Update" data-placement="left" class="btn btn-sm waves-effect" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;"><i class="fa fa-edit" onclick="EditPlan(@Model.PlanList[i].Plan_Id);"></i></a>
                        <a data-toggle="tooltip" title="delete" data-placement="left" class="btn btn-sm waves-effect" style="padding-left: 3px; padding-right: 3px; width: 25px; height: 29px;"><i class="fa fa-trash" onclick="RemovePlan(@Model.PlanList[i].Plan_Id);"></i></a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <table class="table" id="TableCategory">
        <thead>
            <tr>
                <th class="text-center">Sr.No</th>
                <th class="text-center">Plan Name</th>
                <th class="text-center">Plan Price</th>
                <th class="text-center" id="colAction">Action</th>
            </tr>
        </thead>
        <tbody class="text-center">
            <tr>
                <td class="text-center">No data Found</td>
            </tr>
        </tbody>
    </table>
}
